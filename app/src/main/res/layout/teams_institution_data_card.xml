<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_view_aux"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_gravity="top">

                <ImageView
                    android:id="@+id/sub_event_image"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_thumb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Name"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Established"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="No. of Athletes"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Principal"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Head Coach"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Website"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:text="Address"
                        android:textColor="@color/caldroid_darker_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/athletes_name_textview"
                        android:layout_gravity="left"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="Athletics Federation Of India"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/athlete_personal_best"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="1946"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="250"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="Adille Sumarlwalla"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="Mr.C.K. Valson"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="www.indianathletics.in"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/quicksand_regular"
                        android:singleLine="true"
                        android:text="New Delhi,India"
                        android:textColor="@color/light_gray"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>