<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/athlete_personal_best"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.45"
            android:gravity="center_vertical"
            android:text="PB" />

        <TextView
            android:id="@+id/athlete_seasons_best"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.45" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/ic_arr_up"
            android:id="@+id/collapse_times_image"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_white2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/times_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_white2" />

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_performance_graph" />-->

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/graph" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_white2" />
</LinearLayout>