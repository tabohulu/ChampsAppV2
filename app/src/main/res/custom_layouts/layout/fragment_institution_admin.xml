<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_300"
    android:orientation="vertical">



   <LinearLayout
       android:id="@+id/title_lo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="16dp"
       android:orientation="horizontal">

      <Button
          android:id="@+id/new_institution_button"
          android:layout_width="0dp"
          android:layout_height="80dp"
          android:layout_margin="16dp"
          android:layout_weight="0.3"
          android:background="@drawable/round_button"
          android:text="Add \nInstitution"
          android:textSize="13sp" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="All Institutions"
          android:textSize="32sp"
          android:layout_weight="1"
          android:id="@+id/big_title_tv"
          android:layout_gravity="center"
          android:gravity="start"/>

   </LinearLayout>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/institutions_fragment_rv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="8dp">


   </android.support.v7.widget.RecyclerView>

   <TextView
       android:id='@+id/no_data_info_tv'
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:text="No Data Found" />






</LinearLayout>