<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Team"
        android:gravity="center"/>

    <EditText
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_team_name"
        android:hint="Team Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Affiliate Institute"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Affiliate Institute"
        android:textSize="16dp"
        android:id="@+id/affiliateInstuTv"
        android:layout_marginTop="8dp"/>



    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Team Type"
    android:layout_marginTop="16dp"/>
    <Spinner
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/teams_spinner"
        android:entries="@array/institute_teams">

    </Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="OR"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Create Multiple Teams from Excel file"
        android:textSize="16dp" />

    <Button
        android:id="@+id/upload_excel_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select File" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selected_excel_file"
        android:text=""
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="8dp"/>


</LinearLayout>