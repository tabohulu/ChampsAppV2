<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



<com.example.creativediligence.champsapp.MyLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">





    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_aux"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.3"
                android:src="@mipmap/ic_launcher"
                android:tag="image_tag" />


            <EditText
                android:id="@+id/profile_name_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_weight="0.4"
                android:background="@color/caldroid_transparent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="Names"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textCursorDrawable="@drawable/color_cursor" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"
                android:id="@+id/profile_edit_button"
                android:layout_gravity="right"
                android:src="@drawable/edit_icon"/>

        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/aboutMe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"
                android:layout_margin="8dp"
                android:text="About Me"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/profile_aboutme_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/caldroid_transparent"
                android:clickable="false"
                android:textCursorDrawable="@drawable/color_cursor"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="About Me"
                android:minWidth="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="top"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/bio_and_stats_TextView"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"
                android:text="Biography and Stats"
                android:layout_margin="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:orientation="vertical">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dob_title"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:text="DOB"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <EditText
                            android:id="@+id/statsDob"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:background="@color/caldroid_transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:hint="26-01-1991"/>

                    </LinearLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/age_title"
                            android:text="Age"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <EditText
                            android:id="@+id/statsAge"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:background="@color/caldroid_transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:hint="28"/>

                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/height_title"
                            android:text="Height"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <EditText
                            android:id="@+id/statsHeight"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:background="@color/caldroid_transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:hint="174"/>

                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weight_title"
                            android:text="Weight"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <EditText
                            android:id="@+id/statsWeight"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:background="@color/caldroid_transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:hint="74"/>

                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/skills_title"
                            android:text="Skill(s)"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <EditText
                            android:id="@+id/statsSkills"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:background="@color/caldroid_transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:minWidth="10dp"
                            android:hint="Forward"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/teams1_title"
                                android:layout_height="wrap_content"
                                android:text="Team: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                 />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/teams1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/caldroid_transparent"
                                android:layout_gravity="left"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:minWidth="10dp"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:focusableInTouchMode="false"
                                android:hint="@string/members_groups" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/teams2_title"
                                android:layout_height="wrap_content"
                                android:text="Team: "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/teams2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/caldroid_transparent"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:layout_gravity="left"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:minWidth="10dp"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:hint="@string/members_groups" />


                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/experience"
                android:layout_height="wrap_content"
                android:background="@color/sky_blue"
                android:text="Expericience"
                android:layout_margin="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/experience_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="10dp"
                android:gravity="top"
                android:background="@color/caldroid_transparent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"

                android:focusableInTouchMode="false"
                android:hint="Lorem ipsum dolor sit amet"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="16dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</com.example.creativediligence.champsapp.MyLayout>
</ScrollView>
</LinearLayout>