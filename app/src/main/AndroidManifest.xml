<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.creativediligence.champsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Helper_Starter"
        android:allowBackup="true"
        android:icon="@drawable/nichesports"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nichesports"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">


        <activity android:name=".Activity_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_AllSports"/>
        <activity android:name=".Activity_Common_AllSports"/>
        <activity android:name=".Activity_Common_SportsEventOverview"/>
        <activity android:name=".Activity_SubEvents"/>
        <activity android:name=".Activity_TeamsInstitution"/>
        <activity android:name=".AthletesActivity"/>
        <activity android:name=".AthleteDetailsActivity"/>
        <activity android:name=".PointsStandingActivity"/>
        <activity android:name=".CoachesActivity"/>
        <activity android:name=".BracketActivity"/>
        <activity android:name=".CalendarActivity"/>
        <activity
            android:name=".Activity_HomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".Activity_Chat" />

    </application>

</manifest>